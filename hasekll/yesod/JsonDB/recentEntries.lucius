.recententry {
    margin: 20px;
    padding: 20px;
    border-radius: 10px;
    border: 2px solid #D9D9D9;
    font-size: 14px;
    list-style: none;
    min-height: 60px;
    width: auto;
}

.line {
    position: relative;
    text-align: right;
}

.line a {
    position: absolute;
    display: inline;
    top: -20px;
    right: -20px;
    border: 2px solid #D9D9D9;
    background: #D9D9D9;
    text-decoration: none;
    border-radius: 4px;
    padding: 3px;
}